<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/toolbarColor"
    android:padding="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/circleImageView"
        android:layout_alignTop="@id/circleImageView"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/circleImageView"
        android:layout_toRightOf="@id/circleImageView"
        android:gravity="center"
        android:text="请登录"
        android:textColor="?attr/white_grey_1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/collect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/circleImageView"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_star_white_18dp"
        android:drawableStart="@drawable/ic_star_white_18dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/collect"
        android:textColor="?attr/white_grey_1"
        app:layout_widthPercent="50%" />

    <TextView
        android:id="@+id/download"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/collect"
        android:layout_alignTop="@id/collect"
        android:drawableLeft="@drawable/ic_file_download_white_18dp"
        android:drawableStart="@drawable/ic_file_download_white_18dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/download"
        android:textColor="?attr/white_grey_1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:layout_widthPercent="50%" />
</com.zhy.android.percent.support.PercentRelativeLayout>
