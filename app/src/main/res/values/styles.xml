<resources>

    <!-- Base application theme. -->
    <style name="ThemeDay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/grey_1</item>

        <item name="toolbarColor">@color/toolbar</item>

        <item name="white_grey_12">@color/white</item>
        <item name="white_grey_11">@color/white</item>
        <item name="white_grey_10">@color/white</item>
        <item name="white_grey_1">@color/white</item>

        <item name="black_grey_11">@color/black</item>
        <item name="black_grey_8">@color/black</item>
        <item name="black_grey_4">@color/black</item>
        <item name="black_grey_3">@color/black</item>
        <item name="black_grey_1">@color/black</item>

        <item name="grey_11_grey_3">@color/grey_11</item>
        <item name="grey_1_grey_13">@color/grey_1</item>
        <item name="grey_1_grey_12">@color/grey_1</item>
        <item name="grey_1_grey_11">@color/grey_1</item>

        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    </style>

    <style name="ThemeNight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/grey_13</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/grey_12</item>

        <item name="toolbarColor">@color/grey_13</item>

        <item name="white_grey_12">@color/grey_12</item>
        <item name="white_grey_11">@color/grey_11</item>
        <item name="white_grey_10">@color/grey_10</item>
        <item name="white_grey_1">@color/grey_1</item>

        <item name="black_grey_11">@color/grey_11</item>
        <item name="black_grey_8">@color/grey_8</item>
        <item name="black_grey_4">@color/grey_4</item>
        <item name="black_grey_3">@color/grey_3</item>
        <item name="black_grey_1">@color/grey_1</item>

        <item name="grey_11_grey_3">@color/grey_3</item>
        <item name="grey_1_grey_13">@color/grey_13</item>
        <item name="grey_1_grey_12">@color/grey_12</item>
        <item name="grey_1_grey_11">@color/grey_11</item>

        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    </style>

    <style name="CustomCirclePageIndicator" parent="@android:style/Theme.Light">
        <item name="fillColor">#FFFFFFFF</item>
        <item name="pageColor">#FF888888</item>
        <item name="strokeColor">#00000000</item>
        <item name="radius">3.3dp</item>
    </style>

    <style name="textSize" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>
</resources>
